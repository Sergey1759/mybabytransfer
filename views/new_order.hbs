<link rel="stylesheet" href="../stylesheets/new_order.css">
{{> header}}

<div class="container_new_order">
    <div class="container_new_order_header">Новый заказ</div>
    <div class="container_rows">
        <div class="icons">
            <img src="../images/clock.svg" alt="">
        </div>
        <div class="container_rows_right">
            <div class="container_rows_header line_height_17">Время и дата подачи машины</div>
            <div class="container_rows_input"><input type="datetime-local" name="" id="date">
                <div class="error" id="error_date"></div>
            </div>
        </div>
    </div>
    <div class="container_rows">
        <div class="icons">
            <img src="../images/gps_marker.svg" alt="">
        </div>
        <div class="container_rows_right">
            <div class="container_rows_header line_height_17">Адрес подачи</div>
            <div class="container_rows_input">
                <input type="text" name="" placeholder="Выберите адрес" id="autocomplete" autocomplete="on"
                    onfocus="geolocate()">
                <div class="select_in">
                    Выбрать на карте
                </div>
                <div class="select_in">
                    <img src="../images/home.svg" alt=""> Домашний адрес
                </div>
            </div>
        </div>
    </div>
    <div class="container_rows">
        <div class="icons">
            <img src="../images/gps_marker.svg" alt="">
        </div>
        <div class="container_rows_right">
            <div class="container_rows_header line_height_17">Адрес перевозки</div>
            <div class="container_rows_input">
                <input type="text" name="" placeholder="Выберите адрес" id="autocomplete2" autocomplete="on"
                    onfocus="geolocate()">

                <div class="select_in">
                    Выбрать на карте
                </div>
                <div class="select_in">
                    <img src="../images/home.svg" alt=""> Домашний адрес
                </div>
                <div class="select_in">
                    <img src="../images/add_order.svg" alt="">Добавить адрес
                </div>
            </div>
        </div>
    </div>
    <div class="container_rows">
        <div class="icons">
            <img src="../images/type_car.svg" alt="">
        </div>
        <div class="container_rows_right">
            <div class="container_rows_header line_height_17">Тип автомобиля <div class="error" id="type_error"></div>
            </div>
            <div class="container_rows_input ">
                <form class="form_type_radio">
                    <input type="radio" name="type_car" id="type_1" value="standard">
                    <label for="type_1">
                        <div class="types_car">
                            <img src="../images/car_1.svg" alt="">
                            до 4 пассажиров
                        </div>
                    </label>
                    <input type="radio" name="type_car" id="type_2" value="comfort">
                    <label for="type_2">
                        <div class="types_car">
                            <img src="../images/car_2.svg" alt="">
                            до 4 пассажиров
                        </div>
                    </label>
                    <input type="radio" name="type_car" id="type_3" value="business">
                    <label for="type_3">
                        <div class="types_car">
                            <img src="../images/car_3.svg" alt="">

                            <div>до 4 пассажиров</div>
                            <label class="label_color">
                                Укажите кол-во <input type="number" name="" id="">
                            </label>
                        </div>
                    </label>
                </form>
            </div>
        </div>
    </div>
    <div class="container_rows">
        <div class="icons">
            <img src="../images/baby.svg" alt="">
        </div>
        <div class="container_rows_right">
            <div class="container_rows_header line_height_17">Возраст ребенка</div>
            <div class="container_rows_input child_container">
                <div class="left_child">
                    <div class="selects_child_age">
                        <div class="selects_child_age_container">
                            <select name="" class="select_years" id="select_years">
                                <option value="0"></option>
                                <option value="1">1 лет</option>
                                <option value="2">2 лет</option>
                                <option value="3">3 лет</option>
                                <option value="4">4 лет</option>
                                <option value="5">5 лет</option>
                                <option value="6">6 лет</option>
                                <option value="7">7 лет</option>
                                <option value="8">8 лет</option>
                                <option value="9">9 лет</option>
                                <option value="10">10 лет</option>
                                <option value="11">11 лет</option>
                                <option value="12">12 лет</option>
                            </select>
                            <select name="" class="select_month" id="select_month">
                                <option value="0"></option>
                                <option value="4">1 мес</option>
                                <option value="4">2 мес</option>
                                <option value="4">3 мес</option>
                                <option value="4">4 мес</option>
                                <option value="4">5 мес</option>
                                <option value="4">6 мес</option>
                                <option value="4">7 мес</option>
                                <option value="4">8 мес</option>
                                <option value="4">9 мес</option>
                                <option value="4">10 мес</option>
                                <option value="4">11 мес</option>
                            </select>
                            <img src="../images/calendar.svg" alt="">
                        </div>
                        <img src="../images/cancel_child.svg" alt="" srcset="" class="delete_child">
                    </div>

                </div>
                <div class="right_child">
                    <div class="btn_add_child"><img src="../images/add_order.svg" alt=""> Добавить ребенка <div
                            class="error" id="child_error"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container_rows">
        <div class="icons">
            <img src="../images/side-by-side.svg" alt="">
        </div>
        <div class="container_rows_right">
            <div class="container_rows_header line_height_17">Туда и обратно <input type="checkbox" name="side_by_side"
                    id="side_by_side"></div>
        </div>
    </div>
    <div class="container_rows">
        <div class="icons">
            <img src="../images/chat.svg" alt="">
        </div>
        <div class="container_rows_right">
            <div class="container_rows_header line_height_17">Комментарий к заказу</div>
            <div class="container_rows_input">
                <input type="text" name="" id="text_comment" placeholder="Текст комментария">
            </div>
        </div>
    </div>
    <div class="btn_create_order" id="create_order">Просчитать заказ</div>
</div>
{{> footer}}
<script src="../javascripts/post.js"></script>
<script src="../javascripts/new_order.js"></script>
<script src="../javascripts/autocomplete.js"></script>
<script
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBBf2vtMPr5P0Z3JrYOdvz1vugg4fN1-e8&amp;libraries=places&callback=initAutocomplete"
    type="text/javascript"></script>