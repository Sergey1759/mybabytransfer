<link rel="stylesheet" href="../../stylesheets/header.css">
<link rel="stylesheet" href="../../stylesheets/customer_profile.css">

<div class="header">
    <a href="/orders/page/1">
        <div class="logo">
            <img src="../../images/logo.svg" alt="">
        </div>
    </a>
    <div class="menu">
        <a href="/orders/page/1" id="order_header">
            <div class="menu_item"> <img src=" ../../images/burger_not_active.svg" alt=""> Мои заказы </div>
        </a>
        <a href="/customer/profile/" id="profile_header">
            <div class="menu_item"> <img src="../../images/profile_active.svg" alt=""> Мои реквизиты </div>
        </a>
        <div class="menu_item"> <img src="../../images/reports.svg" alt=""> Отчеты</div>
        <a href="/orders/new_order">
            <div class="new_order"> <img src="../../images/add_order.svg" alt=""> Новый заказ</div>
        </a>
    </div>
    <div class="profile">
        <img src="../../images/notification.svg" alt="">
        <div class="profile_name">
            {{user_l.name}}
        </div>
        <div class="profile_lastname">
            {{user_l.lastname}}
        </div>
        <div class="profile_photo" style="background-image: url('{{user_l.avatar_url}}');">
        </div>
        <img src="../../images/door.svg" alt="exit" id="exit">
    </div>
</div>
<script src="../../javascripts/header.js"></script>


<div class="profile_container">
    <div class="header_text">
        Личный кабинет клиента
    </div>
    <div class="container">
        <div class="text">
            <div class="customer">
                <div class="left">
                    <div class="img" style="background-image: url('{{user_l.avatar_url}}'">
                    </div>
                    <label for="btn_add_img">
                        <div id="btn__img">
                            Загрузить фото
                        </div>
                    </label>
                    <input type="file" id="btn_add_img">
                </div>
                <div class="right">
                    <div class="inputs h1 border_null">
                        Ваши данные
                    </div>
                    <div class="inputs">
                        <label for="name">
                            <div class="description"><img src="../../images/man-user.svg" alt="man-user">
                                <div class="inputs__left">
                                    Имя
                                </div>
                            </div>
                        </label>
                        <input type="text" id="name" placeholder="Введите имя...">
                    </div>
                    <div class="inputs border_null">
                        <label for="last_name">
                            <div class="description"><img src="../../images/man-user.svg" alt="man-user">
                                <div class="inputs__left">
                                    Фамилия
                                </div>
                            </div>
                        </label>
                        <input type="text" id="last_name" placeholder="Введите фамилию...">
                    </div>
                </div>
            </div>
            <div class="inputs margin">
                <div class="description"><img src="../../images/gps_marker.svg" alt="man-user">
                    <div class="inputs__left">
                        Домашний адрес
                    </div>
                </div>
                <input type="text">
            </div>
            <div class="inputs margin">
                <div class="description"><img src="../../images/man-user.svg" alt="man-user">
                    <div class="inputs__left">
                        Предпочитаемый тип автомобиля
                    </div>
                </div>
                <input type="text">
            </div>
            <div class="inputs margin">
                <div class="description"><img src="../../images/man-user.svg" alt="man-user">
                    <div class="inputs__left">
                        Возраст ребенка по-умолчанию
                    </div>
                </div>
                <input type="text">
            </div>

        </div>
        <div class="map" id="map">

        </div>
    </div>
    <div class="buttons">
        <div class="btn">Отменить изменения</div>
        <div class="btn" id="send">Сохранить данные</div>
    </div>
</div>

{{>footer}}
<script src="../../javascripts/post.js"></script>
<script src="../../javascripts/customer_profile.js"></script>
<script src="../../javascripts/map.js"></script>

<script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>
<script
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBBf2vtMPr5P0Z3JrYOdvz1vugg4fN1-e8&libraries=places&callback=initMap"
    async defer></script>